      #container {
        display: flex;
        align-items: center;
        gap: 10px;
      }

      .button-animal {
        border: none;
        background-color: var(--color2);
        width: 50px;
        height: 50px;
        border-radius: 8px;
        cursor: pointer;
        font-size: 20pt;
        transition: .2s ease;
      }

      .button-animal:hover {
        background-color: var(--color4);
        transform: scale(1.05);
      }

      .image-container {
        height: 300px;
        width: 300px;
        margin-top: 50px;
      }

      .image-container img {
        height: 100%;
        width: 100%;
      }


